<% include header %>
<script type="text/javascript">
   // Populate Drop Down Menu with users from MySQL
                    $.ajax({
                    url: "doctors/select",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    complete: function (data) {
                        $('div#select').html(data.responseText);
                    }
                });
  
      $(document).ready(function () {
            $('#user-submit').click(function () {
                var payload = {
                    drLName: $('#lastname').val(),
		    drFName: $('#firstname').val()
                };

		console.log(payload);

                $.ajax({
                    url: "/doctors/table",
                    type: "POST",
                    contentType: "html",
                    processData: false,
                    data: JSON.stringify(payload),
                    complete: function (data) {
                        $('div#output').html(data.responseText);
                    }
                });
            });
        });
</script>
	<% include menu %>
   	   <h3>Select a Doctor for On Call Information</h3>
	<div id="select"></div>
	<input id="user-submit" type="submit" />
	<div id="output"></div>
<% include footer %>